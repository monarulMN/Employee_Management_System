@model IEnumerable<Employee_Management_System.Models.Entities.Employee>

<h1>Employees</h1>
<a class="btn btn-primary mb-2" asp-action="Create">Add Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Designation</th>
            <th>Joining Date</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Designation</td>
                <td>@employee.JoiningDate</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Department?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

