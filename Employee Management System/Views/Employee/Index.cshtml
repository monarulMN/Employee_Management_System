@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Employee_Management_System.Models.ViewModels.EmployeeViewModel>

<h2>Employees</h2>

<div class="d-flex justify-content-between flex-wrap mb-2">
    <a class="btn btn-primary mb-2" asp-action="Create">Add Employee</a>
    <form asp-action="Index" class ="d-flex " method="get">
        <input type="text" name="searchString" class="form-control me-2 " placeholder="Search.." />
        <button type="submit" class="btn btn-sm btn-primary ">Search</button>
    </form>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Designation</th>
            <th>Joining Date</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Designation</td>
                <td>@employee.JoiningDate</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.DepartmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }

        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new {page}))
        </div>
    </tbody>
</table>

